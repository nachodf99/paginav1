      const estimatorModel = {
        levels: {
          presencia: {
            label: "Presencia digital",
            range: [700, 1200],
            weeks: [2, 3],
            includes: ["Web profesional", "Optimización móvil", "Formulario de contacto"]
          },
          crecimiento: {
            label: "Crecimiento",
            range: [1200, 2500],
            weeks: [3, 5],
            includes: ["Web orientada a ventas", "Sistema de reservas o citas", "Automatización de contacto"]
          },
          optimizacion: {
            label: "Optimización",
            range: [2000, 4000],
            weeks: [4, 7],
            includes: ["Automatizaciones internas", "Seguimiento de clientes", "Panel de métricas clave"]
          }
        },
        innovation: {
          label: "Innovación",
          range: [1500, 5000],
          weeks: [2, 4],
          includes: ["IA aplicada al negocio", "Análisis avanzado de datos"]
        },
        situations: {
          "no-web": {
            includes: ["Diseño web desde cero"],
            problems: ["No tienes presencia digital"]
          },
          "needs-improve": {
            includes: ["Rediseño y mejoras de rendimiento"],
            problems: ["La web actual no convierte"]
          },
          "sell-online": {
            includes: ["Catálogo o tienda online"],
            problems: ["No estás vendiendo en internet"]
          },
          automate: {
            includes: ["Flujos automatizados básicos"],
            problems: ["Procesos manuales que consumen tiempo"]
          }
        },
        objectives: {
          clientes: {
            boost: [150, 350],
            weeks: [0.2, 0.4],
            includes: ["Landing enfocada a captación"],
            problems: ["Falta de nuevos clientes"]
          },
          mostrar: {
            boost: [100, 250],
            weeks: [0.1, 0.3],
            includes: ["Secciones de servicios y casos"],
            problems: ["Baja visibilidad del negocio"]
          },
          reservas: {
            boost: [200, 400],
            weeks: [0.3, 0.6],
            includes: ["Agenda y reservas online"],
            problems: ["Gestión manual de citas"]
          },
          vender: {
            boost: [250, 500],
            weeks: [0.4, 0.7],
            includes: ["Checkout simple de productos"],
            problems: ["No puedes vender productos online"]
          },
          "reducir-llamadas": {
            boost: [120, 260],
            weeks: [0.1, 0.3],
            includes: ["Canales de contacto automatizados"],
            problems: ["Demasiadas llamadas repetitivas"]
          },
          automatizar: {
            boost: [300, 600],
            weeks: [0.4, 0.8],
            includes: ["Automatización de tareas repetitivas"],
            problems: ["Tareas internas lentas"]
          },
          "ia-futuro": {
            boost: [0, 150],
            weeks: [0, 0.2],
            includes: ["Preparación para integrar IA"],
            problems: ["No hay base para IA futura"]
          }
        }
      };

      const uniqueList = (items) => [...new Set(items)];

      const updateBriefResult = () => {
        if (!briefSummary || !briefInvestment || !briefTimeline || !briefIncludes || !briefProblems) return;

        const situationValue = document.querySelector('input[name="currentSituation"]:checked')?.value;
        const baseLevel = document.querySelector('input[name="investmentLevel"]:checked')?.value;
        const innovationSelected = Boolean(innovationToggle?.checked);
        const soloWeb = Boolean(soloWebInput?.checked);
        const selectedObjectives = Array.from(objectiveInputs)
          .filter((input) => input.checked)
          .map((input) => input.value);

        if (!situationValue || !baseLevel) {
          briefSummary.textContent = "Completa los tres pasos para ver un estimado ajustado a tu momento actual.";
          briefInvestment.textContent = "-";
          briefTimeline.textContent = "-";
          briefIncludes.innerHTML = "";
          briefProblems.innerHTML = "";
          return;
        }

        const levelData = estimatorModel.levels[baseLevel];
        let [minInvestment, maxInvestment] = levelData.range;
        let [minWeeks, maxWeeks] = levelData.weeks;
        let includes = [...levelData.includes];
        let problems = [];

        if (soloWeb) {
          includes = ["Web profesional", "Optimización móvil", "Formulario de contacto"];
          minInvestment = Math.min(minInvestment, 900);
          maxInvestment = Math.min(maxInvestment, 1400);
          minWeeks = Math.min(minWeeks, 2);
          maxWeeks = Math.min(maxWeeks, 3.5);
        }

        const situationData = estimatorModel.situations[situationValue];
        if (situationData) {
          includes = includes.concat(situationData.includes);
          problems = problems.concat(situationData.problems);
        }

        selectedObjectives.forEach((objective) => {
          const objectiveData = estimatorModel.objectives[objective];
          if (!objectiveData) return;
          minInvestment += objectiveData.boost[0];
          maxInvestment += objectiveData.boost[1];
          minWeeks += objectiveData.weeks[0];
          maxWeeks += objectiveData.weeks[1];
          includes = includes.concat(objectiveData.includes);
          problems = problems.concat(objectiveData.problems);
        });

        if (innovationSelected) {
          const innovationData = estimatorModel.innovation;
          minInvestment += innovationData.range[0];
          maxInvestment += innovationData.range[1];
          minWeeks += innovationData.weeks[0];
          maxWeeks += innovationData.weeks[1];
          includes = includes.concat(innovationData.includes);
          problems = problems.concat(["Necesitas innovación avanzada"]);
        }

        minInvestment = Math.round(minInvestment);
        maxInvestment = Math.round(maxInvestment);
        minWeeks = Math.round(minWeeks * 10) / 10;
        maxWeeks = Math.round(maxWeeks * 10) / 10;

        briefSummary.textContent = `Para tu situación, la inversión suele situarse entre ${formatCurrency(
          minInvestment
        )} y ${formatCurrency(maxInvestment)}. Incluye ${uniqueList(includes).slice(0, 3).join(", ")}. Tiempo estimado: ${
          minWeeks
        } a ${maxWeeks} semanas.`;
        briefInvestment.textContent = `${formatCurrency(minInvestment)} – ${formatCurrency(maxInvestment)}`;
        briefTimeline.textContent = `${minWeeks} – ${maxWeeks} semanas`;
        briefIncludes.innerHTML = uniqueList(includes)
          .slice(0, 6)
          .map((item) => `<li>${item}</li>`)
          .join("");
        briefProblems.innerHTML = uniqueList(problems)
          .slice(0, 6)
          .map((item) => `<li>${item}</li>`)
          .join("");
      };

      [...situationInputs, ...objectiveInputs, ...investmentInputs].forEach((input) => {
        input.addEventListener("change", updateBriefResult);
      });
      if (soloWebInput) {
        soloWebInput.addEventListener("change", updateBriefResult);
      }
      if (innovationToggle) {
        innovationToggle.addEventListener("change", updateBriefResult);
      }
      updateBriefResult();
    </script>
  </body>
</html>
