              "Optimización de conversión",
              "Panel básico de clientes"
            ],
            iaIncluded: false
          },
          optimizacion: {
            label: "Optimización",
            baseInvestment: [2000, 4000],
            baseWeeks: [4, 6],
            baseImpact: [18, 30],
            includes: [
              "Automatización interna",
              "Seguimiento de leads",
              "Integraciones con herramientas",
              "Métricas y reporting"
            ],
            iaIncluded: false
          }
        },
        innovationAddon: {
          label: "Innovación / IA",
          range: [1500, 5000],
          weeks: [2, 4],
          impact: [4, 10],
          areas: ["Soluciones avanzadas", "Experiencias personalizadas"],
          tools: ["IA aplicada", "Dashboards inteligentes", "Asistentes digitales"]
