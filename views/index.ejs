            tools: ["Landing optimizadas", "Analítica web"],
            iaIncluded: false
          },
          optimizacion: {
            label: "Optimización",
            baseInvestment: [2000, 4000],
            baseWeeks: [4, 7],
            baseImpact: [18, 30],
            areas: ["Conversión y automatización", "Procesos digitales"],
            tools: ["Automatizaciones web", "Integraciones"],
            iaIncluded: false
          },
          innovacion: {
            label: "Innovación",
            baseInvestment: [3000, 6000],
            baseWeeks: [5, 8],
            baseImpact: [22, 36],
            areas: ["Soluciones avanzadas", "Experiencias personalizadas"],
