        const soloWebText = isSoloWeb ? " (Solo web)" : "";

        briefIncludes.innerHTML = includesItems.map((item) => `<li>${item}</li>`).join("");
        briefTools.innerHTML = toolsItems.map((item) => `<li>${item}</li>`).join("");
        briefProblems.innerHTML = problemsItems.length
          ? problemsItems.map((item) => `<li>${item}</li>`).join("")
          : "<li>Sin objetivos seleccionados aún.</li>";
        briefRangeDetail.textContent = investmentText;
        briefRangeReason.textContent = `Se calcula por tu situación (${situationData.label}), el nivel ${investmentData.label}${soloWebText}${innovationText}${objectivesText}.`;
