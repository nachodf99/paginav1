            areas: ["Automatización de tareas"],
            tools: ["Workflows"]
          },
          "ia-futuro": {
            investmentBoost: [300, 600],
            weeksBoost: [0.6, 1.2],
            impactBoost: [4, 8],
            areas: ["Capacidades con IA"],
            tools: ["Asistente IA"]
          }
        }
      };

      const uniqueList = (items) => [...new Set(items)];

      const updateBriefResult = () => {
        if (
          !briefSummary ||
          !briefInvestment ||
          !briefTimeline ||
          !briefImpact ||
          !briefAreas ||
          !briefTools ||
          !panelInvestment ||
          !panelTimeline ||
          !panelImpact ||
          !panelAreas ||
          !panelTools
        )
          return;

        const situationValue = document.querySelector('input[name="currentSituation"]:checked')?.value;
        const investmentValue = document.querySelector('input[name="investmentLevel"]:checked')?.value;
        const selectedObjectives = Array.from(objectiveInputs)
          .filter((input) => input.checked)
          .map((input) => input.value);

        if (!situationValue || !investmentValue) {
          briefSummary.textContent =
            "Selecciona tu situación actual y nivel de inversión para calcular un estimado consultivo.";
          briefInvestment.textContent = "-";
          briefTimeline.textContent = "-";
          briefImpact.textContent = "-";
          briefAreas.innerHTML = "";
          briefTools.innerHTML = "";
          panelInvestment.textContent = "-";
          panelTimeline.textContent = "-";
          panelImpact.textContent = "-";
          panelAreas.innerHTML = "";
          panelTools.innerHTML = "";
          return;
        }

        const situationData = briefModel.situations[situationValue] || briefModel.situations["no-web"];
        const investmentData = briefModel.investmentLevels[investmentValue] || briefModel.investmentLevels["presencia-digital"];
        const objectiveCount = selectedObjectives.length;
        const iaActive = investmentData.iaIncluded || selectedObjectives.includes("ia-futuro");

        let [investmentMin, investmentMax] = investmentData.baseInvestment;
        let [weeksMin, weeksMax] = investmentData.baseWeeks;
        let [impactMin, impactMax] = investmentData.baseImpact;
        let areas = [...investmentData.areas, ...situationData.areas];
        let tools = [...investmentData.tools, ...situationData.tools];

        investmentMin += situationData.investmentBoost[0];
        investmentMax += situationData.investmentBoost[1];
        weeksMin += situationData.weeksBoost[0];
        weeksMax += situationData.weeksBoost[1];
        impactMin += situationData.impactBoost[0];
        impactMax += situationData.impactBoost[1];

        selectedObjectives.forEach((objective) => {
          const objectiveData = briefModel.objectives[objective];
          if (!objectiveData) return;
          investmentMin += objectiveData.investmentBoost[0];
          investmentMax += objectiveData.investmentBoost[1];
          weeksMin += objectiveData.weeksBoost[0];
          weeksMax += objectiveData.weeksBoost[1];
          impactMin += objectiveData.impactBoost[0];
          impactMax += objectiveData.impactBoost[1];
          areas = areas.concat(objectiveData.areas);
          tools = tools.concat(objectiveData.tools);
        });

        if (!iaActive) {
          areas = areas.filter((item) => !item.toLowerCase().includes("ia"));
          tools = tools.filter((item) => !item.toLowerCase().includes("ia"));
        }

        if (objectiveCount <= 1 && ["presencia-digital", "crecimiento"].includes(investmentValue)) {
          investmentMin = Math.round(investmentMin * 0.9);
          investmentMax = Math.round(investmentMax * 0.9);
          weeksMax = Math.round(weeksMax * 0.9 * 10) / 10;
        }

        if (investmentValue === "presencia-digital") {
          investmentMin = Math.max(investmentMin, 700);
        }

        weeksMin = Math.round(weeksMin * 10) / 10;
        weeksMax = Math.round(weeksMax * 10) / 10;
        impactMin = Math.round(impactMin);
        impactMax = Math.min(Math.round(impactMax), 80);

        if (innovationSelected) {
          const innovationData = estimatorModel.innovation;
          minInvestment += innovationData.range[0];
          maxInvestment += innovationData.range[1];
          minWeeks += innovationData.weeks[0];
          maxWeeks += innovationData.weeks[1];
          includes = includes.concat(innovationData.includes);
          problems = problems.concat(["Necesitas innovación avanzada"]);
        }

        briefSummary.textContent = `Según tu situación y objetivos, el rango estimado se sitúa entre ${investmentText}. La implementación toma entre ${weeksMin} y ${weeksMax} semanas y puede generar mejoras del ${impactMin}–${impactMax}%.`;
        briefInvestment.textContent = `${formatCurrency(investmentMin)} – ${formatCurrency(investmentMax)}`;
        briefTimeline.textContent = `${weeksMin} – ${weeksMax} semanas`;
        briefImpact.textContent = `${impactMin}% – ${impactMax}%`;

        const areaItems = uniqueList(areas).slice(0, 4);
        const toolItems = uniqueList(tools).slice(0, 4);
        briefAreas.innerHTML = areaItems.map((item) => `<li>${item}</li>`).join("");
        briefTools.innerHTML = toolItems.map((item) => `<li>${item}</li>`).join("");
        panelInvestment.textContent = `${formatCurrency(investmentMin)} – ${formatCurrency(investmentMax)}`;
        panelTimeline.textContent = `${weeksMin} – ${weeksMax} semanas`;
        panelImpact.textContent = `${impactMin}% – ${impactMax}%`;
        panelAreas.innerHTML = areaItems
          .map(
            (item) =>
              `<span class="rounded-full border border-white/10 bg-white/5 px-3 py-1 text-white/80">${item}</span>`
          )
          .join("");
        panelTools.innerHTML = toolItems
          .map(
            (item) =>
              `<span class="rounded-full border border-amarilloCorp/40 bg-amarilloCorp/10 px-3 py-1 text-amarilloCorp">${item}</span>`
          )
          .join("");
      };

      [...situationInputs, ...investmentInputs, ...objectiveInputs].forEach((input) => {
        input.addEventListener("change", updateBriefResult);
      });
      if (soloWebInput) {
        soloWebInput.addEventListener("change", updateBriefResult);
      }
      if (innovationToggle) {
        innovationToggle.addEventListener("change", updateBriefResult);
      }
      updateBriefResult();
    </script>
