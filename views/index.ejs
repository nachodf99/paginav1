          "mostrar-negocio": {
            label: "Mostrar negocio",
            investmentBoost: [120, 250],
            weeksBoost: [0.2, 0.5],
            impactBoost: [1, 3],
            includes: ["Galería profesional", "Contenido visual"],
            problems: ["Poca visibilidad del negocio"]
          },
          "reservas-citas": {
            label: "Reservas y citas",
            investmentBoost: [200, 400],
            weeksBoost: [0.4, 0.8],
            impactBoost: [3, 6],
            includes: ["Sistema de reservas", "Agenda automatizada"],
            problems: ["Gestión manual de reservas"]
          },
          "vender-productos": {
            label: "Vender productos",
            investmentBoost: [250, 500],
            weeksBoost: [0.6, 1],
            impactBoost: [4, 7],
            includes: ["Catálogo online", "Pasarela de pago"],
            problems: ["Ventas digitales limitadas"]
          },
          "reducir-llamadas": {
            label: "Reducir llamadas",
            investmentBoost: [180, 320],
            weeksBoost: [0.3, 0.6],
            impactBoost: [3, 5],
            includes: ["Contacto automatizado", "WhatsApp Business"],
            problems: ["Exceso de llamadas repetitivas"]
          },
          "automatizar-repetitivas": {
            label: "Automatizar tareas",
            investmentBoost: [280, 520],
            weeksBoost: [0.6, 1.2],
            impactBoost: [5, 9],
            includes: ["Automatización de tareas", "Workflows internos"],
            problems: ["Tareas repetitivas que consumen tiempo"]
          },
          "ia-futuro": {
            label: "Preparar IA",
            investmentBoost: [300, 600],
            weeksBoost: [0.6, 1.2],
            impactBoost: [4, 8],
            includes: ["Preparación para IA", "Asistente IA"],
            problems: ["Falta de escalabilidad con IA"]
          }
        }
      };

      const uniqueList = (items) => [...new Set(items)];

      const updateBriefResult = () => {
        if (
          !briefSummary ||
          !briefInvestment ||
          !briefTimeline ||
          !briefImpact ||
          !briefAreas ||
          !briefTools ||
          !briefIncludes ||
          !briefProblems ||
          !briefExample ||
          !briefRangeDetail ||
          !briefRangeReason ||
          !briefDeliverablesSummary ||
          !briefProblemsSummary ||
          !briefTimelineDetail ||
          !panelInvestment ||
          !panelTimeline ||
          !panelImpact ||
          !panelAreas ||
          !panelTools
        )
          return;

        const situationValue = document.querySelector('input[name="currentSituation"]:checked')?.value;
        let investmentValue = document.querySelector('input[name="investmentLevel"]:checked')?.value;
        const innovationSelected = innovationToggle?.checked;
        const selectedObjectives = Array.from(objectiveInputs)
          .filter((input) => input.checked)
          .map((input) => input.value);

        if (situationValue === "no-web") {
          const presenceInput = document.querySelector('input[name="investmentLevel"][value="presencia-digital"]');
          if (presenceInput && !presenceInput.checked) {
            presenceInput.checked = true;
            investmentValue = "presencia-digital";
          }
        }

        if (suggestNoWeb) {
          suggestNoWeb.classList.toggle("hidden", situationValue !== "no-web");
        }
        if (suggestEcommerce) {
          suggestEcommerce.classList.toggle("hidden", !selectedObjectives.includes("vender-productos"));
        }
        if (suggestCalls) {
          suggestCalls.classList.toggle("hidden", !selectedObjectives.includes("reducir-llamadas"));
        }

        if (soloWebInput) {
          const soloWebEnabled = investmentValue === "presencia-digital";
          soloWebInput.disabled = !soloWebEnabled;
          if (!soloWebEnabled) {
            soloWebInput.checked = false;
          }
        }

        if (!situationValue || !investmentValue) {
          briefSummary.textContent =
            "Selecciona tu situación actual y nivel de inversión para calcular un estimado consultivo.";
          if (briefRecommendation) {
            briefRecommendation.textContent = "Selecciona opciones para ver la recomendación principal.";
          }
          briefInvestment.textContent = "-";
          briefTimeline.textContent = "-";
          briefImpact.textContent = "-";
          briefAreas.textContent = "-";
          briefTools.innerHTML = "";
          briefIncludes.innerHTML = "";
          briefProblems.innerHTML = "";
          briefRangeDetail.textContent = "-";
          briefRangeReason.textContent = "-";
          briefDeliverablesSummary.textContent = "-";
          briefProblemsSummary.textContent = "-";
          briefTimelineDetail.textContent = "-";
          panelInvestment.querySelector("p:last-child").textContent = "-";
          panelTimeline.querySelector("p:last-child").textContent = "-";
          panelImpact.querySelector("p:last-child").textContent = "-";
          panelAreas.querySelector("p:last-child").textContent = "-";
          panelTools.querySelector("p:last-child").textContent = "-";
          briefExample.textContent =
            '"Para tu situación, la inversión suele situarse entre 900€ y 1.600€. Incluye web profesional, optimización móvil y formulario de contacto. Tiempo estimado: 2 a 3 semanas."';
          return;
        }

        const situationData = estimatorModel.situations[situationValue] || estimatorModel.situations["no-web"];
        const investmentData =
          estimatorModel.investmentLevels[investmentValue] || estimatorModel.investmentLevels["presencia-digital"];
        const isSoloWeb = Boolean(soloWebInput?.checked && investmentValue === "presencia-digital");
        const recommendations = [];
        const objectiveLabels = selectedObjectives
          .map((objective) => estimatorModel.objectives[objective]?.label)
          .filter(Boolean);

        let [investmentMin, investmentMax] = investmentData.baseInvestment;
        let [weeksMin, weeksMax] = investmentData.baseWeeks;
        let [impactMin, impactMax] = investmentData.baseImpact;
        let includes = isSoloWeb ? [...estimatorModel.soloWeb.includes] : [...investmentData.includes];
        let problems = [];
        let areas = [...situationData.areas];
        let tools = [...situationData.tools];

        investmentMin += situationData.investmentBoost[0];
        investmentMax += situationData.investmentBoost[1];
        weeksMin += situationData.weeksBoost[0];
        weeksMax += situationData.weeksBoost[1];
        impactMin += situationData.impactBoost[0];
        impactMax += situationData.impactBoost[1];

        selectedObjectives.forEach((objective) => {
          const objectiveData = estimatorModel.objectives[objective];
          if (!objectiveData) return;
          investmentMin += objectiveData.investmentBoost[0];
          investmentMax += objectiveData.investmentBoost[1];
          weeksMin += objectiveData.weeksBoost[0];
          weeksMax += objectiveData.weeksBoost[1];
          impactMin += objectiveData.impactBoost[0];
          impactMax += objectiveData.impactBoost[1];
          includes = includes.concat(objectiveData.includes);
          problems = problems.concat(objectiveData.problems);
        });

        if (selectedObjectives.includes("vender-productos")) {
          recommendations.push("Módulo ecommerce");
        }
        if (selectedObjectives.includes("reducir-llamadas")) {
          recommendations.push("Reservas online o automatización de atención");
        }

        if (situationValue === "no-web") {
          problems.unshift("Ausencia de presencia digital");
          recommendations.push("Presencia digital como base");
        }
        if (situationValue === "web-mejora") {
          problems.unshift("Web desactualizada o poco efectiva");
        }
        if (situationValue === "automatizar-tareas") {
          problems.unshift("Procesos manuales que frenan el crecimiento");
        }
        if (situationValue === "vender-online") {
          problems.unshift("Ventas online poco estructuradas");
        }

        if (investmentValue === "presencia-digital") {
          investmentMin = Math.max(investmentMin, 700);
        }

        weeksMin = Math.round(weeksMin * 10) / 10;
        weeksMax = Math.round(weeksMax * 10) / 10;
        impactMin = Math.round(impactMin);
        impactMax = Math.min(Math.round(impactMax), 80);

        if (innovationSelected) {
          const innovationData = estimatorModel.innovationAddon;
          investmentMin += innovationData.range[0];
          investmentMax += innovationData.range[1];
          weeksMin += innovationData.weeks[0];
          weeksMax += innovationData.weeks[1];
          impactMin += innovationData.impact[0];
          impactMax += innovationData.impact[1];
          areas = areas.concat(innovationData.areas);
          includes = includes.concat(innovationData.tools);
          tools = tools.concat(innovationData.tools);
        }

        const investmentText = `${formatCurrency(investmentMin)} – ${formatCurrency(investmentMax)}`;
        const soloWebNote = isSoloWeb ? " en modo Solo web (sin automatización/IA)" : "";
