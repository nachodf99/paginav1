      const briefRangeReason = document.getElementById("briefRangeReason");
      const briefDeliverablesSummary = document.getElementById("briefDeliverablesSummary");
      const briefProblemsSummary = document.getElementById("briefProblemsSummary");
      const briefTimelineDetail = document.getElementById("briefTimelineDetail");
