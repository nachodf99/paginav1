          ? `Entregables clave: ${includesItems.slice(0, 4).join(", ")}.`
          : "-";
        briefProblemsSummary.textContent = problemsItems.length
          ? `Resolvería: ${problemsItems.slice(0, 4).join(", ")}.`
          : "Sin problemas definidos aún.";
        briefTimelineDetail.textContent = `${weeksMin} – ${weeksMax} semanas`;

        panelInvestment.querySelector("p:last-child").textContent = investmentText;
        panelTimeline.querySelector("p:last-child").textContent = `${weeksMin}–${weeksMax} semanas`;
        panelImpact.querySelector("p:last-child").textContent = `${impactMin}–${impactMax}%`;
        panelAreas.querySelector("p:last-child").textContent = uniqueList(areas).slice(0, 3).join(", ") || "-";
        panelTools.querySelector("p:last-child").textContent = includesItems.slice(0, 3).join(", ") || "-";

        briefExample.textContent = `"Para tu situación, la inversión suele situarse entre ${investmentText}. Incluye ${includesItems
          .slice(0, 3)
          .join(", ")}. Tiempo estimado: ${weeksMin} a ${weeksMax} semanas."`;
      };

